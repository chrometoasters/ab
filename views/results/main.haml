%div(class='width4 stroke')
    - if @search.winner
        %h2
            Results for #{safe @search.query_term || params[:query_terms]}
        %hr    
        %div(class='width4 stroke')
            %div(class='column width2 first')
                %div(class='outcome')
                    =haml :'results/outcome', :locals => {:winner => winner_class(:a)}
                
            %div(class='column width2')
                %div(class='outcome')
                    =haml :'results/outcome', :locals => {:winner => winner_class(:b)}
    - else
        = haml :'results/rank_options' 
                
%div(class='width4 stroke')
    %div(class='column width2 first result_set #{winner_class(:a)}')
 
        - @results[0][:items].each do |item|
            %div(class='result')
                = haml :'results/item', :locals => {:item => item}
    
    %div(class='column width2 result_set #{winner_class(:b)}')


        - @results[1][:items].each do |item|
            %div(class='result')
                = haml :'results/item', :locals => {:item => item}
                
%div(class='width4 stroke' id='permalink')
    %div(class='width4 first' id='permalink')
        = haml :'results/permalink'
