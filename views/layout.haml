!!!
%html{:lang => 'eng'}
    %head
        %meta{:charset => 'utf-8'}
        %title= @title || ''
        = stylesheet_link_tag '/stylesheets/baseline.compress.css', '/stylesheets/content.css'
        = javascript_script_tag '/javascript/jquery-1.5.1.min.js', '/javascript/hints.js'
        /[if lte IE 8]
            = javascript_script_tag '/javascript/html5.js'
    %body#page
        %div(id='main-content')
            = haml :header
            = haml :flashes
            = yield if block_given?
