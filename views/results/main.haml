%div(class='width4 stroke')
    - unless @search.winner
        = haml :'results/rank_options'

%div(class='width4 stroke outcome')
    - if @search.winner
        = haml :'results/outcome'
 
%div(class='width4 stroke')
    %div(class='column width2 first result_set')
        - @results[0][:items].each do |item|
            %div(class='result')
                = haml :'results/item', :locals => {:item => item}
    
    %div(class='column width2 result_set')
        - @results[1][:items].each do |item|
            %div(class='result')
                = haml :'results/item', :locals => {:item => item}
                
%div(class='width4 stroke' id='permalink')
    %div(class='width4 first' id='permalink')
        = haml :'results/permalink'
