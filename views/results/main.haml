.width4.stroke
    - if @search.ranked?
        %h2
            Results for #{safe @search.query_term || params[:query_terms]}
        %hr    
        .width4.stroke
            .column.width2.first
                %div(class='outcome')
                    = haml :'results/outcome', :locals => {:winner => winner_key?(:a)}
                
            .column.width2
                .outcome
                    = haml :'results/outcome', :locals => {:winner => winner_key?(:b)}
    - else
        = haml :'results/rank_options'
                
.width4.stroke
    %div(class='column width2 first result_set #{winner_key?(:a, 'winner')}')
 
        - @results[:a][:items].each do |item|
            %div(class='result')
                = haml :'results/item', :locals => {:item => item}
    
    %div(class='column width2 result_set #{winner_key?(:b, 'winner')}')

        - @results[:b][:items].each do |item|
            .result
                = haml :'results/item', :locals => {:item => item}
                
.width4.stroke
    .width4.first#permalink
        = haml :'results/permalink'
